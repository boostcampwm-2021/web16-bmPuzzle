{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true ,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@loaders/*": ["./loaders/*"],
      "@api/*": ["./api/*"],
      "@models/*": ["./models/*"],
      "@config/*": ["./config/*"],
      "@services/*": ["./services/*"],
      "@public/*": ["./public/*"]
    }
  }
}